{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "db/**/*.ts",
    "db/shared/ftpBlob/deleteFileFromFTP.mjs",
    "db/shared/ftpBlob/index.mjs",
    "db/shared/ftpBlob/listFiles.mjs",
    "db/shared/ftpBlob/openConnection.mjs",
    "db/shared/ftpBlob/uploadFileToFTPFromFileSystem.mjs"
  ],
  "exclude": ["node_modules"]
}
